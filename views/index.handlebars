<h1 class="text-center">Check out our awesome burgers!</h1>



<div class="row">
  <div class="col-lg-6 w-50 p-3">
    <h2>burgers that are not sleepy!</h2>
    {{#each burgers}}
      {{#unless devoured}}


        <div class="card card-default w-50 text-center">
          <div class="card-header">
            <button type="button" class="btn btn-default burger_id" data-burger={{this.id}}>
              DEVOUR!
            </button>
          </div>
          <div class="card-body">
            {{this.burger_name}}
          </div>
        </div>


    {{/unless}}
    {{/each}}
    </div>


    <div class="col-lg-6 w-50 p-3">
      <h2>burgers that are sleepy!</h2>
          {{#each burgers}}
          {{#if devoured}}
            <div class="col-lg-6 w-50 p-3">


                <div class="card card-default text-center">
                  <div class="card-body">
                    <h3>Burger: {{this.id}} </h3> {{this.burger_name}}
                  </div>
                </div>

            </div>
          {{/if}}
          {{/each}}
    </div>
</div>

<div class="row">
  <div class="col-lg-12 text-center">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add burger</button>
    </form>
  </div>
</div>
